{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "ES2024"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2024",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true,
    "jsxFragmentFactory": "Fragment"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.stories.ts"]
}
